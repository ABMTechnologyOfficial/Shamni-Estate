<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_3sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_7sdp"
        android:elevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo" />

                <!--            <ImageView-->
                <!--                app:tint="@color/white"-->
                <!--                android:layout_alignParentEnd="true"-->
                <!--                android:layout_width="@dimen/_30sdp"-->
                <!--                android:layout_marginEnd="@dimen/_10sdp"-->
                <!--                android:layout_marginTop="@dimen/_10sdp"-->
                <!--                android:layout_height="@dimen/_30sdp"-->
                <!--                android:src="@drawable/ic_like"/>-->

            </RelativeLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/property_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_bold"
                    android:gravity="top"
                    android:textAllCaps="false"
                    android:text="Siddhi Vinayak Vihar"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="16sp" />

                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/property_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_medium"
                    android:gravity="top"
                    android:text="By - Aman Khare"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:drawableLeft="@drawable/ic_baseline_currency_rupee_242"
                            android:id="@+id/property_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/heebo_bold"
                            android:gravity="top"
                            android:text="10Lac - 15Lac"
                            android:padding="@dimen/_1sdp"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/property_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/heebo_regular"
                            android:gravity="top"
                            android:text="3 Thousand /Sq.ft"
                            android:padding="@dimen/_1sdp"
                            android:textColor="@color/light_black"
                            android:textFontWeight="600"
                            android:textSize="@dimen/_11sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:gravity="end"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/property_price_per_feet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/heebo_bold"
                            android:gravity="end"
                            android:text="3000"
                            android:padding="@dimen/_1sdp"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/heebo_regular"
                            android:gravity="end"
                            android:text="Per Sq.ft."
                            android:padding="@dimen/_1sdp"
                            android:textColor="@color/light_black"
                            android:textFontWeight="600"
                            android:textSize="@dimen/_11sdp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:id="@+id/property_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo_regular"
                        android:gravity="top"
                        android:text="Description About the property And more "
                        android:textColor="@color/light_black"
                        android:textFontWeight="600"
                        android:textSize="14sp" />


                    <TextView
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:id="@+id/property_read_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="top"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Read More"
                        android:textColor="#00FF0A"
                        android:textFontWeight="600"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/anim_recycler"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:paddingVertical="@dimen/_15sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="#E3F6FF"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/profile"
                    android:id="@+id/associate_image"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:id="@+id/associate_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_bold"
                    android:gravity="top"
                    android:layout_gravity="center_vertical"
                    android:textAllCaps="false"
                    android:text="Aman"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/call_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:tint="@color/white"
                        android:src="@drawable/ic_baseline_add_ic_call_24"/>

                </LinearLayout>

            </LinearLayout>
<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/_1sdp"-->
<!--                android:layout_marginTop="@dimen/_5sdp"-->
<!--                android:background="#74D5D5D5"/>-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>