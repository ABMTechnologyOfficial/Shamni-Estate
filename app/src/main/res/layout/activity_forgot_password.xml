<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context=".ui.auth.ForgotPasswordActivity">


    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/logo"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_25sdp"
        android:elevation="@dimen/_60sdp"
        android:background="@drawable/round_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:fontFamily="@font/heebo_bold"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_25sdp"
            android:textSize="@dimen/_25sdp"/>


            <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/error_animation"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="@dimen/_210sdp"
                android:layout_marginBottom="@dimen/_5sdp"
            app:lottie_rawRes="@raw/forgot_password"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditTextOutLineStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
            app:boxCornerRadiusBottomStart="@dimen/_4sdp"
            app:boxCornerRadiusTopEnd="@dimen/_4sdp"
            app:boxCornerRadiusTopStart="@dimen/_4sdp"
            app:boxStrokeColor="@color/colorPrimary"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                android:autofillHints="password"
                android:background="@null"
                android:fontFamily="@font/heebo_regular"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLength="10"
                android:singleLine="true"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_12sdp" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/text_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/heebo_bold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_60sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Get Link"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>



</LinearLayout>